<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32sp"
    tools:context=".AnalyzerActivity">

    <Button
        android:id="@+id/btnAnalyzeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Analyze"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputVigorous" />

    <TextView
        android:id="@+id/tvModeratePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins"
        android:text="How many hours of moderate aerobic activity do you do every week? Examples of moderate aerobic activity include: brisk walking, biking, mowing the lawn, and swimming."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnalyzerActivity" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputVigorous"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/ic_baseline_access_time_24"
        android:fontFamily="@font/poppins"
        android:hint="Hours"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVigorousPrompt" />

    <TextView
        android:id="@+id/tvVigorousPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins"
        android:text="How many hours of vigorous aerobic activity do you do every week? Examples of vigorous aerobic activity are: running, heavy yard work, weight lifting, and rock climbing."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputModerate" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputModerate"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/ic_baseline_access_time_24"
        android:fontFamily="@font/poppins"
        android:hint="Hours"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvModeratePrompt" />

    <TextView
        android:id="@+id/tvAnalyzerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Analyzer: Activity"
        android:textColor="?attr/colorPrimary"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>